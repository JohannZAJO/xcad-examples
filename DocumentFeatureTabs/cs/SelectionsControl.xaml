<UserControl x:Class="Xarial.XCad.Examples.DocumentFeatureTabs.SelectionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Xarial.XCad.Examples.DocumentFeatureTabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="{Binding Path=SelectionsCount, StringFormat=Selections Count: {0}}" FontSize="20"
                   VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
